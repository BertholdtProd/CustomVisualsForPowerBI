{
    "dataRoles": [
        {
            "displayName": "Category Data",
            "name": "category",
            "kind": 0
        },
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": 1
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "max": 1
                        },
                    "measure": {
                        "max": 1
                    }
                }
            ],

            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    },
                    "dataReductionAlgorithm": {
                        "top": {}
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ]
}